<?xml version="1.0" encoding="UTF-8"?>
<assessmentItem xmlns="http://www.imsglobal.org/xsd/imsqtiasi_v3p0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.imsglobal.org/xsd/imsqtiasi_v3p0 http://www.imsglobal.org/xsd/qti/qtiv3p0/imsqti_itemv3p0_v1p0.xsd" 
	identifier="qti3-choice-multiple-03" title="Composition of Water qti3 - max/min Choices Messages" adaptive="false" timeDependent="false">
	<responseDeclaration identifier="RESPONSE1" cardinality="multiple" baseType="identifier"/>
	<responseDeclaration identifier="RESPONSE2" cardinality="multiple" baseType="identifier"/>
	<responseDeclaration identifier="RESPONSE3" cardinality="multiple" baseType="identifier"/>
	<outcomeDeclaration identifier="SCORE" cardinality="single" baseType="float"/>
	<itemBody>
		<p>Which of the following elements are used to form water?</p>
		
		<!-- Stacking specified here only to compress the presentation of the 6 choices -->
		<qti-choice-interaction class="qti-choices-stacking-3" data-max-selections-message="You've selected too many!" response-identifier="RESPONSE1" shuffle="true" max-choices="2">
			<qti-prompt>Demonstrates max-choices="2" and custom <em>data-max-selections-message</em>.</qti-prompt>
			<qti-simple-choice identifier="H" fixed="false">Hydrogen</qti-simple-choice>
			<qti-simple-choice identifier="He" fixed="false">Helium</qti-simple-choice>
			<qti-simple-choice identifier="C" fixed="false">Carbon</qti-simple-choice>
			<qti-simple-choice identifier="O" fixed="false">Oxygen</qti-simple-choice>
			<qti-simple-choice identifier="N" fixed="false">Nitrogen</qti-simple-choice>
			<qti-simple-choice identifier="Cl" fixed="false">Chlorine</qti-simple-choice>
		</qti-choice-interaction>

		<!-- Stacking specified here only to compress the presentation of the 6 choices -->		
		<qti-choice-interaction class="qti-choices-stacking-3" response-identifier="RESPONSE2" shuffle="true" max-choices="2">
			<qti-prompt>Demonstrates max-choices="2" and default/system Max Selections Message.</qti-prompt>
			<qti-simple-choice identifier="H" fixed="false">Hydrogen</qti-simple-choice>
			<qti-simple-choice identifier="He" fixed="false">Helium</qti-simple-choice>
			<qti-simple-choice identifier="C" fixed="false">Carbon</qti-simple-choice>
			<qti-simple-choice identifier="O" fixed="false">Oxygen</qti-simple-choice>
			<qti-simple-choice identifier="N" fixed="false">Nitrogen</qti-simple-choice>
			<qti-simple-choice identifier="Cl" fixed="false">Chlorine</qti-simple-choice>
		</qti-choice-interaction>

		<!-- Stacking specified here only to compress the presentation of the 6 choices -->		
		<qti-choice-interaction class="qti-choices-stacking-3" data-min-selections-message="Not enough selected! Please select at least two." response-identifier="RESPONSE3" shuffle="true" max-choices="0" min-choices="2">
			<qti-prompt>Demonstrates min-choices="2" and custom <em>data-min-selections-message</em>.</qti-prompt>
			<qti-simple-choice identifier="H" fixed="false">Hydrogen</qti-simple-choice>
			<qti-simple-choice identifier="He" fixed="false">Helium</qti-simple-choice>
			<qti-simple-choice identifier="C" fixed="false">Carbon</qti-simple-choice>
			<qti-simple-choice identifier="O" fixed="false">Oxygen</qti-simple-choice>
			<qti-simple-choice identifier="N" fixed="false">Nitrogen</qti-simple-choice>
			<qti-simple-choice identifier="Cl" fixed="false">Chlorine</qti-simple-choice>
		</qti-choice-interaction>
		
	</itemBody>
</assessmentItem>
